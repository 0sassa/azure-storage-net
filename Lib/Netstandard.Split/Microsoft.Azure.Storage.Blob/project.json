{
  "title": "Microsoft.Azure.Storage.Blob",
  "version": "1.0.0-*",

  "dependencies": {
    "Microsoft.Azure.Storage.Common": "0.1.0-netcorepreview",
    "NETStandard.Library": "1.6.1"
  },

  "frameworks": {
    "netstandard1.3": {
      "imports": "dnxcore50"
    }
  },

  "buildOptions": {
    "define": [ "NETCORE" ],
    "outputName": "Microsoft.Azure.Storage.Blob",
    "allowUnsafe": false,
    "warningsAsErrors": true,
    "delaySign": true,
    "keyFile": "MSSharedLibKey.snk",
    "compile": [
      "**/*.cs",
      "../../Common/Blob/*.cs",
      "../../Common/Blob/Auth/*.cs",
      "../../Common/Blob/Protocol/*.cs",
      "../../Common/Blob/Util/*.cs",
      "../../Common/Blob/Account/*.cs",

      "../../WindowsRuntime/Blob/*.cs",
      "../../WindowsRuntime/Blob/Protocol/*.cs"
    ]
  }
}
